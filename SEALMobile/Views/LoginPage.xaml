<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SEALMobile.Views.LoginPage"
    >
    <ContentPage.Content>
        <StackLayout Margin="15">
            <StackLayout VerticalOptions="Center">
                <Entry x:Name="user_value" Placeholder="User" ></Entry>
                <Entry x:Name="pass_value" Placeholder="Password" IsPassword="True"></Entry>
                <Label x:Name="login_label" Text=""></Label>
                <Button HorizontalOptions="Center"
                        HeightRequest="50" WidthRequest="180" Margin="20"
                     BackgroundColor="LightGray" Text="Login" Clicked="Handle_Login"/>

            </StackLayout>

            <Label x:Name="label"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
